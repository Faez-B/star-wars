{% extends 'base.html.twig' %}

{% block title %}Liste des joueurs{% endblock %}

{% block body %}
<div class="">
    <h1 class="text-center">Liste des joueurs</h1>

    <table class="table"
        data-toggle="table" 
        data-pagination="true" 
        data-page-size="30"
        data-search="true"
    >
        <thead>
            <tr>
                <th data-searchable="true">Code allié</th>
                <th data-searchable="false">Pseudo</th>
                <th data-searchable="false">Titre</th>
                <th data-searchable="false">Niveau</th>
                <th data-searchable="false">Puissance galactique totale</th>
                <th data-searchable="false">Puissance galactique héros</th>
                <th data-searchable="false">Puissance galactique vaisseaux</th>
                <th data-searchable="false">Action</th>
            </tr>
        </thead>
        <tbody>
            {% include "main/_liste_joueurs.html.twig" %}
        </tbody>
    </table>
</div>
{% endblock %}
